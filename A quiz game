def display_field():
    print("Welcome to the Python Quiz!")
    print("Choose a field of interest to start the quiz:")
    print("1. Literature")
    print("2. Science")
    print("3. History")
    print("4. Technology")
    print("5. Sports")
    print("Enter the number corresponding to your choice.\n")

